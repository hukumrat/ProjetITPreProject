@using ProjeITPreProjectMvcUI.Areas.Admin.Views.ViewModels
@model RolesEditViewModel
@{
    ViewData["Title"] = "Roles Edit Page";
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Roles Edit Page
            </header>
            <div class="panel-body">
                <form asp-area="Admin" asp-controller="Roles" asp-action="Edit" method="post" role="form" class="form-horizontal tasi-form">
                    <div asp-validation-summary="All" class="text-danger"></div>
                     <input type="hidden" asp-for="Users">
                     <input type="hidden" asp-for="Id">
                    <div class="form-group has-success">
                        <label asp-for="Id" class="col-lg-2 control-label">Role Id:</label>
                        <div class="col-lg-10">
                            <input asp-for="Id" disabled type="text" placeholder="Role Id" class="form-control">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label asp-for="Name" class="col-lg-2 control-label">Role Name:</label>
                        <div class="col-lg-10">
                            <input required asp-for="Name" type="text" placeholder="Role Name" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Edit</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>
@using ProjeITPreProjectMvcUI.Areas.Admin.ViewModels
@model UsersProfileViewModel
@{
    ViewData["Title"] = "Profile Page";
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Profile Page
            </header>
            <div class="panel-body">
                <form asp-area="Admin" asp-controller="Users" asp-action="Profile" method="post" role="form" class="form-horizontal tasi-form">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group has-success">
                        <input type="hidden" asp-for="Username" value="@Model.Username" />
                        <label asp-for="Username" class="col-lg-2 control-label">Username:</label>
                        <div class="col-lg-10">
                            <input disabled required asp-for="Username" type="text" placeholder="Username" class="form-control">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label asp-for="CurrentPassword" class="col-lg-2 control-label">Current Password:</label>
                        <div class="col-lg-10">
                            <input required asp-for="CurrentPassword" type="password" placeholder="Current Password" class="form-control">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label asp-for="NewPassword" class="col-lg-2 control-label">New Password:</label>
                        <div class="col-lg-10">
                            <input required asp-for="NewPassword" type="password" placeholder="New Password" class="form-control">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label asp-for="ConfirmPassword" class="col-lg-2 control-label">Confirm Password:</label>
                        <div class="col-lg-10">
                            <input required asp-for="ConfirmPassword" type="password" placeholder="Confirm Password" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>
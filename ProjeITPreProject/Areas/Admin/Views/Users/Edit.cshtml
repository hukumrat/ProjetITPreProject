@using ProjeITPreProjectMvcUI.Areas.Admin.Views.ViewModels
@model UsersEditViewModel
@{
    ViewData["Title"] = "Users Edit Page";
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Users Edit Page
            </header>
            <div class="panel-body">
                <form asp-area="Admin" asp-controller="Users" asp-action="Edit" method="post" role="form" class="form-horizontal tasi-form">
                    <div asp-validation-summary="All" class="text-danger"></div>
                     <input type="hidden" asp-for="Id">
                    <div class="form-group has-success">
                        <label asp-for="Id" class="col-lg-2 control-label">User Id:</label>
                        <div class="col-lg-10">
                            <input asp-for="Id" disabled type="text" placeholder="User Id" class="form-control">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label asp-for="Username" class="col-lg-2 control-label">Username:</label>
                        <div class="col-lg-10">
                            <input required asp-for="Username" type="text" placeholder="Username" class="form-control">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label asp-for="RoleId" class="col-lg-2 control-label">Role:</label>
                        
                        <div class="col-lg-10">
                            <select required asp-for="RoleId" asp-items="@Model.Roles" class="form-control"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Edit</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>
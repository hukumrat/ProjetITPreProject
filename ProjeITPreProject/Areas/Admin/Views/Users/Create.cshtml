@using ProjeITPreProjectMvcUI.Areas.Admin.Views.ViewModels
@model UsersCreateViewModel
@{
    ViewData["Title"] = "Users Create Page";
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Roles Create Page
            </header>
            <div class="panel-body">
                <form asp-area="Admin" asp-controller="Users" asp-action="Create" method="post" role="form" class="form-horizontal tasi-form">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group has-success">
                        <label asp-for="Username" class="col-lg-2 control-label">Username:</label>
                        <div class="col-lg-10">
                            <input required asp-for="Username" type="text" placeholder="Username" class="form-control">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label asp-for="Password" class="col-lg-2 control-label">Password:</label>
                        <div class="col-lg-10">
                            <input required asp-for="Password" type="password" placeholder="Password" class="form-control">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label asp-for="ConfirmPassword" class="col-lg-2 control-label">Confirm Password:</label>
                        <div class="col-lg-10">
                            <input required asp-for="ConfirmPassword" type="password" placeholder="Confirm Password" class="form-control">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label asp-for="RoleId" class="col-lg-2 control-label">Role:</label>
                        
                        <div class="col-lg-10">
                            <select required asp-for="RoleId" asp-items="@Model.Roles" class="form-control"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Add</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>
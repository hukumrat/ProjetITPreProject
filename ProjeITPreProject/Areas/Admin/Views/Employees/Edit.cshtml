@using ProjeITPreProjectMvcUI.Areas.Admin.ViewModels
@model EmployeesEditViewModel
@{
    ViewData["Title"] = "Employee Edit Page";
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Employee Edit Page
            </header>
            <div class="panel-body">
                <form asp-area="Admin" asp-controller="Employees" asp-action="Edit" method="post" role="form" class="form-horizontal tasi-form">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" value="@Model.Id"/>
                    <div class="form-group has-success">
                        <label asp-for="Name" class="col-lg-2 control-label">Name:</label>
                        <div class="col-lg-10">
                            <input required asp-for="Name" type="text" placeholder="Name" class="form-control">
                        </div>
                    </div>
                     <div class="form-group has-success">
                        <label asp-for="Surname" class="col-lg-2 control-label">Surname:</label>
                        <div class="col-lg-10">
                            <input required asp-for="Surname" type="text" placeholder="Surname" class="form-control">
                        </div>
                    </div>
                    <div class="form-group has-success">
                        <label asp-for="CompanyId" class="col-lg-2 control-label">Company:</label>
                        <div class="col-lg-10">
                            <select required asp-for="CompanyId" asp-items="@Model.Companies" class="form-control"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Add</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>